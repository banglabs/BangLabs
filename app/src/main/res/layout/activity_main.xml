<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/home_page_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/base_container_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/scroll_img_id"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:background="@drawable/banglabs" />

            <TextView
                android:id="@+id/show_text_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/scroll_img_id"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:background="#E97F7F"
                android:gravity="center"
                android:text="@string/ProVersionText"
                android:textColor="#0C212B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/button_container_id"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/show_text_id"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/btn_container_id1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/create_card_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/create_card_btn_id"
                            android:layout_margin="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/create"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ready_made_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <Button
                            android:id="@+id/ready_made_btn_id"
                            android:layout_margin="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/readymade" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_container_id2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/saved_card_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/saved_card_btn_id"
                            android:layout_margin="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/saved" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edited_card_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/edited_card_btn_id"
                            android:layout_margin="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/edited" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/powered_by_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/button_container_id"
                android:gravity="center"
                android:text="@string/PoweredByText" />
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/add_view_section_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/powered_by_id"
                android:layout_margin="2dp"
                android:background="#8FCCCBCB"
                android:gravity="center"
                android:text="Google ADD" />

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>